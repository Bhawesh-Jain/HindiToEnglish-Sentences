<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="13dp"
    app:cardUseCompatPadding="true"
    android:layout_marginHorizontal="8dp"
    tools:ignore="HardcodedText"
    android:id="@+id/chapter_row"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:id="@+id/row_chapter"       >

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_centerVertical="true"
            android:layout_above="@id/txt_chapter_row_desc"
            android:layout_toStartOf="@id/english_play"
            android:alpha=".3"
            android:baselineAlignBottom="true"
            android:src="@mipmap/ic_logo" />

        <TextView
            android:id="@+id/txt_chapter_row_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="18dp"
            android:layout_toStartOf="@+id/english_play"
            android:fontFamily="@font/lato_regular"
            android:text="Dummy header Text"
            android:textColor="#3611d8"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/txt_chapter_row_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_chapter_row_header"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/hindi_play"
            android:fontFamily="@font/lato_regular"
            android:padding="3dp"
            android:text="Dummy text"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/english_play"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignTop="@id/txt_chapter_row_header"
            android:layout_alignParentEnd="true"

            android:contentDescription="Play"
            android:src="@drawable/ic_speaker_play" />

        <ImageView
            android:id="@+id/hindi_play"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignTop="@id/txt_chapter_row_desc"
            android:layout_alignParentEnd="true"

            android:src="@drawable/ic_speaker_play"
            android:contentDescription="Play" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>